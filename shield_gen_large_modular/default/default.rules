	// ARCSHIELD START ---------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	ToggleComponents_Shield_Default_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Default_On
		Components = 
		{ 
			GENL_ArcShield : &<../shield_gen_large_modular.rules>/Part/Components/ArcShield
			{
				OperationalToggle = IsOperational
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/default/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
					: &../^/0/ShieldMediaEffects/2	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/default/HitMediaEffects, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			GENL_EmitterEffect : &<../shield_gen_large_modular.rules>/Part/Components/BaseEmitterEffect
			{
				OperationalToggle = IsOperational
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/default/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
				]
			}
			GENL_OverclockEffect : &<../shield_gen_large_modular.rules>/Part/Components/OverclockEffect
			{
				OperationalToggle = OverclockedEffectToggle
				Shield = GENL_ArcShield
				ChainedTo = GENL_ArcShield
			}
			GENL_OverloadEffect : &<../shield_gen_large_modular.rules>/Part/Components/OverloadEffect
			{
				OperationalToggle = IsOperationalOverloaded
				Shield = GENL_ArcShield
				ChainedTo = GENL_ArcShield
			}
			GENL_OverclockOverloadEffect : &<../shield_gen_large_modular.rules>/Part/Components/OverclockOverloadEffect
			{
				OperationalToggle = IsOperationalOverclockedOverloaded
				Shield = GENL_ArcShield
				ChainedTo = GENL_ArcShield
			}
		}
	}

	ToggleComponents_Shield_Default_Off
	{
		Type = ToggledComponents
		Toggle = Toggle_Default_Off
		Components =
		{
			GENL_ArcShield : &../../ToggleComponents_Shield_Default_On/Components/GENL_ArcShield
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/default/ShieldMediaEffect_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
					: &../^/0/ShieldMediaEffects/2	{}
				]
			}
		}
	}
	
