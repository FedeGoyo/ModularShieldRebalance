	Toggle_Default_On
	{
		Type = MultiToggle
		Toggles = [ToggleColour_Default, ToggleDisplay_On]
		Mode = All
	}
	Toggle_Default_Off :	Toggle_Default_On	{ Toggles = [ToggleColour_Default, ToggleDisplay_Off] }
	
