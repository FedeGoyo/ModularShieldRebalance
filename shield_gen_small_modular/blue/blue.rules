	ToggleComponents_Shield_Blue_Arc_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_Arc_On
		Components : &<../purple/purple.rules>/Components/ToggleComponents_Shield_Purple_Arc_On/Components
		{
			GENS_ArcShield : ^/0/GENS_ArcShield
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1 {}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/HitMediaEffects, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			GENS_EmitterEffect : ^/0/GENS_EmitterEffect
			{
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/MediaEffects/1	{}
				]
			}
		}
	}

	ToggleComponents_Shield_Blue_Line_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_Line_On
		Components : &../ToggleComponents_Shield_Blue_Arc_On/Components
		{
			GENS_ArcShield : ^/0/GENS_ArcShield	{ ChainedTo = Transform_Line_Rotation_FrontToRight }
		}
	}

	ToggleComponents_Shield_Blue_Arc_Off
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_Arc_Off
		Components =
		{
			GENS_ArcShield : &../../ToggleComponents_Shield_Blue_Arc_On/Components/GENS_ArcShield
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
				]
			}
		}
	}

	ToggleComponents_Shield_Blue_Line_Off
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_Line_Off
		Components  : &../ToggleComponents_Shield_Blue_Arc_Off/Components
		{
			GENS_ArcShield : ^/0/GENS_ArcShield	{ ChainedTo = Transform_Line_Rotation_FrontToRight }
		}
	}
	
