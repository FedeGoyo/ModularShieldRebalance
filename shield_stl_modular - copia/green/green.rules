	ToggleComponents_Green_0_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Green_0_On
		IncludeInGreenprints = false
		Components : <../purple/purple.rules>/Components/ToggleComponents_Purple_0_On/Components
		{
			// Inner
			ArcShield_InnerFront :		^/0/ArcShield_InnerFront
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Green/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Green/HitMediaEffects, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			ArcShield_InnerFrontRight :	<../stats.rules>/Stats/ArcShield_InnerFrontRight, ArcShield_InnerFront	{}
			ArcShield_InnerBackRight :	<../stats.rules>/Stats/ArcShield_InnerBackRight, ArcShield_InnerFront	{}
			ArcShield_InnerBack :		<../stats.rules>/Stats/ArcShield_InnerBack, ArcShield_InnerFront		{}
			ArcShield_InnerBackLeft :	<../stats.rules>/Stats/ArcShield_InnerBackLeft, ArcShield_InnerFront	{}
			ArcShield_InnerFrontLeft :	<../stats.rules>/Stats/ArcShield_InnerFrontLeft, ArcShield_InnerFront	{}
							
			// Outer (when overclocked)
			ArcShield_OuterFrontRight :	<../stats.rules>/Stats/ArcShield_OuterFrontRight, ArcShield_InnerFront
			{
				Radius = &<../stats.rules>/Stats/RadiusOuter
				ShieldMediaEffects
				[
					: &../^/1/ShieldMediaEffects/0 { Radius = &../../Radius }
					: &../^/1/ShieldMediaEffects/1	{}
				]
			}
			ArcShield_OuterRight :		<../stats.rules>/Stats/ArcShield_OuterRight, ArcShield_OuterFrontRight		{}
			ArcShield_OuterBackRight :	<../stats.rules>/Stats/ArcShield_OuterBackRight, ArcShield_OuterFrontRight	{}
			ArcShield_OuterBackLeft :	<../stats.rules>/Stats/ArcShield_OuterBackLeft, ArcShield_OuterFrontRight	{}
			ArcShield_OuterLeft :		<../stats.rules>/Stats/ArcShield_OuterLeft, ArcShield_OuterFrontRight		{}
			ArcShield_OuterFrontLeft :	<../stats.rules>/Stats/ArcShield_OuterFrontLeft, ArcShield_OuterFrontRight	{}
			
			// Always
			STL_EmitterEffect : ^/0/STL_EmitterEffect
			{
				OperationalToggle = IsOperational
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Green/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/MediaEffects/1	{}
				]
			}
		}
	}

