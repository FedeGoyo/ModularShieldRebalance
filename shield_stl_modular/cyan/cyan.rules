Components
{
	// -------------------------------------------------------------------------------------------------------------------------
	// TOGGLE START ------------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------

	Toggle_Cyan_On :	<../default/default.rules>/Components/Toggle_Default_On	{ Toggles = [ToggleColour_Cyan, ToggleDisplay_On]  }
	Toggle_Cyan_Off :	<../default/default.rules>/Components/Toggle_Default_On	{ Toggles = [ToggleColour_Cyan, ToggleDisplay_Off] }
	
	// -------------------------------------------------------------------------------------------------------------------------
	// ARCSHIELD START ---------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	ToggleComponents_Shield_Cyan_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Cyan_On
		Components : <../default/default.rules>/Components/ToggleComponents_Shield_Default_On/Components
		{
			ArcShield_Front :		^/0/ArcShield_Front
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Cyan/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
					: &../^/0/ShieldMediaEffects/2	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Cyan/HitMediaEffects_On, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			ArcShield_FrontRight :	<../stats.rules>/Stats/ArcShield_FrontRight, ArcShield_Front	{}
			ArcShield_BackRight :	<../stats.rules>/Stats/ArcShield_BackRight, ArcShield_Front		{}
			ArcShield_Back :		<../stats.rules>/Stats/ArcShield_Back, ArcShield_Front			{}
			ArcShield_BackLeft :	<../stats.rules>/Stats/ArcShield_BackLeft, ArcShield_Front		{}
			ArcShield_FrontLeft :	<../stats.rules>/Stats/ArcShield_FrontLeft, ArcShield_Front		{}

			// Always
			STL_EmitterEffect : ^/0/STL_EmitterEffect
			{
				OperationalToggle = IsOperational
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Cyan/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
				]
			}
		}
	}
	
	ToggleComponents_Shield_Cyan_Off
	{
		Type = ToggledComponents
		Toggle = Toggle_Cyan_Off
		Components =
		{
			ArcShield_Front :		&../../ToggleComponents_Shield_Cyan_On/Components/ArcShield_Front
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Cyan/ShieldMediaEffect_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
					: &../^/0/ShieldMediaEffects/2	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Cyan/HitMediaEffects_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			ArcShield_FrontRight :	<../stats.rules>/Stats/ArcShield_FrontRight, ArcShield_Front	{}
			ArcShield_BackRight :	<../stats.rules>/Stats/ArcShield_BackRight, ArcShield_Front		{}
			ArcShield_Back :		<../stats.rules>/Stats/ArcShield_Back, ArcShield_Front			{}
			ArcShield_BackLeft :	<../stats.rules>/Stats/ArcShield_BackLeft, ArcShield_Front		{}
			ArcShield_FrontLeft :	<../stats.rules>/Stats/ArcShield_FrontLeft, ArcShield_Front		{}
		}
	}
	
	// -------------------------------------------------------------------------------------------------------------------------
	// GRAPHICS START ----------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	ToggleComponents_Graphics_Cyan
	{
		Type = ToggledComponents
		Toggle = ToggleColour_Cyan
		Components : &<../default/default.rules>/Components/ToggleComponents_Graphics_Default/Components
		{
			K_Graphics :	^/0/K_Graphics
			{				
				OperationalDoodad :	^/0/OperationalDoodad
				{
					DamageLevels
					[
						: ../^/0/DamageLevels/0
						{
							AnimationFiles
							[
								"doodads_lightning1.png"
								"doodads_lightning2.png"
								"doodads_lightning3.png"
								"doodads_lightning4.png"
								"doodads_lightning5.png"
								"doodads_lightning6.png"
								"doodads_lightning7.png"
								"doodads_lightning8.png"
							]
						}
					]
				}
				
				OperationalLighting :	^/0/OperationalLighting
				{
					DamageLevels
					[
						{
							File = "lights.png"
							Size = [4, 4]
						}
					]
				}
				
				OperationalRoofLighting :	^/0/OperationalLighting
				{
					DamageLevels
					[
						: ../^/0/DamageLevels/0	{ VertexColor = &<../../colors.rules>/Color/Cyan/VertexColor }
					]
				}
			}
		}
	}	
}