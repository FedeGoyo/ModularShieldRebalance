	ToggleComponents_Blue_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_On
		IncludeInBlueprints = false
		Components : <../purple/purple.rules>/Components/ToggleComponents_Purple_On/Components
		{
			// Inner
			ArcShield_InnerFront :	^/0/ArcShield_InnerFront
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/HitMediaEffects, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			ArcShield_InnerRight :	<../stats.rules>/Stats/ArcShield_InnerRight0, ArcShield_InnerFront	{}
			ArcShield_InnerBack :	<../stats.rules>/Stats/ArcShield_InnerBack0, ArcShield_InnerFront	{}
			ArcShield_InnerLeft :	<../stats.rules>/Stats/ArcShield_InnerLeft0, ArcShield_InnerFront	{}
							
			// Outer (when overclocked)
			ArcShield_OuterFrontRight :	<../stats.rules>/Stats/ArcShield_OuterFrontRight0, ArcShield_InnerFront
			{
				Radius = &<../stats.rules>/Stats/RadiusOuter
				ShieldMediaEffects
				[
					: &../^/1/ShieldMediaEffects/0 { Radius = &../../Radius }
					: &../^/1/ShieldMediaEffects/1	{}
				]
			}
			ArcShield_OuterBackRight :	<../stats.rules>/Stats/ArcShield_OuterBackRight0, ArcShield_OuterFrontRight	{}
			ArcShield_OuterBackLeft :	<../stats.rules>/Stats/ArcShield_OuterBackLeft0, ArcShield_OuterFrontRight	{}
			ArcShield_OuterFrontLeft :	<../stats.rules>/Stats/ArcShield_OuterFrontLeft0, ArcShield_OuterFrontRight	{}
			
			// Always
			STS_EmitterEffect : ^/0/STS_EmitterEffect
			{
				OperationalToggle = IsOperational
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/MediaEffects/1	{}
				]
			}
		}
	}

