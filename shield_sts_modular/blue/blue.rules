Components
{
	// -------------------------------------------------------------------------------------------------------------------------
	// TOGGLE START ------------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------

	Toggle_Blue_On :	<../default/default.rules>/Components/Toggle_Default_On	{ Toggles = [ToggleColour_Blue, ToggleDisplay_On]  }
	Toggle_Blue_Off :	<../default/default.rules>/Components/Toggle_Default_On	{ Toggles = [ToggleColour_Blue, ToggleDisplay_Off] }
	
	// -------------------------------------------------------------------------------------------------------------------------
	// ARCSHIELD START ---------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	ToggleComponents_Shield_Blue_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_On
		Components : <../default/default.rules>/Components/ToggleComponents_Shield_Default_On/Components
		{
			ArcShield_Front :	^/0/ArcShield_Front
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
					: &../^/0/ShieldMediaEffects/2	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/HitMediaEffects_On, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			ArcShield_Right :	<../stats.rules>/Stats/ArcShield_Right, ArcShield_Front	{}
			ArcShield_Back :	<../stats.rules>/Stats/ArcShield_Back, ArcShield_Front	{}
			ArcShield_Left :	<../stats.rules>/Stats/ArcShield_Left, ArcShield_Front	{}
			
			// Always
			STS_EmitterEffect : ^/0/STS_EmitterEffect
			{
				OperationalToggle = IsOperational
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
				]
			}
		}
	}
	
	ToggleComponents_Shield_Blue_Off
	{
		Type = ToggledComponents
		Toggle = Toggle_Blue_Off
		Components =
		{
			ArcShield_Front :	&../../ToggleComponents_Shield_Blue_On/Components/ArcShield_Front
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/ShieldMediaEffect_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1	{}
					: &../^/0/ShieldMediaEffects/2	{}
				]
				HitMediaEffects
				[
					: &../^/0/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Blue/HitMediaEffects_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/HitMediaEffects/1 {}
				]
			}
			ArcShield_Right :	<../stats.rules>/Stats/ArcShield_Right, ArcShield_Front		{}
			ArcShield_Back :	<../stats.rules>/Stats/ArcShield_Back, ArcShield_Front		{}
			ArcShield_Left :	<../stats.rules>/Stats/ArcShield_Left, ArcShield_Front		{}
		}
	}
	
	// -------------------------------------------------------------------------------------------------------------------------
	// GRAPHICS START ----------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	ToggleComponents_Graphics_Blue
	{
		Type = ToggledComponents
		Toggle = ToggleColour_Blue
		Components : &<../default/default.rules>/Components/ToggleComponents_Graphics_Default/Components
		{
			K_Graphics :	^/0/K_Graphics
			{				
				OperationalDoodad :	^/0/OperationalDoodad
				{
					DamageLevels
					[
						: ../^/0/DamageLevels/0
						{
							AnimationFiles
							[
								"doodads_lightning1.png"
								"doodads_lightning2.png"
								"doodads_lightning3.png"
								"doodads_lightning4.png"
								"doodads_lightning5.png"
								"doodads_lightning6.png"
								"doodads_lightning7.png"
								"doodads_lightning8.png"
							]
						}
					]
				}
				
				OperationalLighting :	^/0/OperationalLighting
				{
					DamageLevels
					[
						{
							File = "lights.png"
							Size = [2, 2]
						}
					]
				}
				
				OperationalRoofLighting :	^/0/OperationalRoofLighting
				{
					DamageLevels
					[
						: ../^/0/DamageLevels/0	{ VertexColor = &<../../colors.rules>/Color/Blue/VertexColor }
					]
				}
			}
		}
	}
}