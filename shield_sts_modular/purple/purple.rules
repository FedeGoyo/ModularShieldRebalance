	// -------------------------------------------------------------------------------------------------------------------------
	// TOGGLE START ------------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	Toggle_Purple_On
	{
		Type = MultiToggle
		Toggles = [ToggleColours_Purple, ToggleDisplay_On, ]
		Mode = All
	}
	Toggle_Purple_Off :		Toggle_Purple_On	{ Toggles = [ToggleColours_Purple, ToggleDisplay_Off, ColoursProxy, DisplayProxy] }
	
	// -------------------------------------------------------------------------------------------------------------------------
	// ARCSHIELD START ---------------------------------------------------------------------------------------------------------
	// -------------------------------------------------------------------------------------------------------------------------
	
	ToggleComponents_Purple_On
	{
		Type = ToggledComponents
		Toggle = Toggle_Purple_On
		IncludeInBlueprints = false
		Components = 
		{
			// Inner
			ArcShield_InnerFront :	<../stats.rules>/Stats/ArcShield_InnerFront, &<../shield_sts_modular.rules>/Part/Components/ArcShield
			{
				ShieldMediaEffects
				[
					: &../^/1/ShieldMediaEffects/0
					{
						Radius = &../../Radius
						ArcSprite : &<../../colors.rules>/Color/Purple/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/1/ShieldMediaEffects/1 {}
				]
				HitMediaEffects
				[
					: &../^/1/HitMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Purple/HitMediaEffects, ^/0/ArcSprite	{}
					}
					: &../^/1/HitMediaEffects/1 {}
				]
			}
			ArcShield_InnerRight :	<../stats.rules>/Stats/ArcShield_InnerRight, ArcShield_InnerFront	{}
			ArcShield_InnerBack :	<../stats.rules>/Stats/ArcShield_InnerBack, ArcShield_InnerFront	{}
			ArcShield_InnerLeft :	<../stats.rules>/Stats/ArcShield_InnerLeft, ArcShield_InnerFront	{}
			
			OverloadEffect_InnerFront :	<../stats.rules>/Stats/OverloadEffect_InnerFront, &<../shield_sts_modular.rules>/Part/Components/OverloadEffect
			{
				ContinuousEffects [ : &../^/1/ContinuousEffects/0 { Radius = &../../../ArcShield_InnerFront/Radius } ]
			}
			OverloadEffect_InnerRight :	<../stats.rules>/Stats/OverloadEffect_InnerRight, OverloadEffect_InnerFront	{}
			OverloadEffect_InnerBack :	<../stats.rules>/Stats/OverloadEffect_InnerBack, OverloadEffect_InnerFront	{}
			OverloadEffect_InnerLeft :	<../stats.rules>/Stats/OverloadEffect_InnerLeft, OverloadEffect_InnerFront	{}
			
			OverclockEffect_InnerFront :	<../stats.rules>/Stats/OverclockEffect_InnerFront, &<../shield_sts_modular.rules>/Part/Components/OverclockEffect
			{
				ContinuousEffects [ : &../^/1/ContinuousEffects/0 { Radius = &../../../ArcShield_InnerFront/Radius } ]
			}
			OverclockEffect_InnerRight :	<../stats.rules>/Stats/OverclockEffect_InnerRight, OverclockEffect_InnerFront	{}
			OverclockEffect_InnerBack :		<../stats.rules>/Stats/OverclockEffect_InnerBack, OverclockEffect_InnerFront	{}
			OverclockEffect_InnerLeft :		<../stats.rules>/Stats/OverclockEffect_InnerLeft, OverclockEffect_InnerFront	{}
			
			OverclockOverloadEffect_InnerFront :	<../stats.rules>/Stats/OverclockOverloadEffect_InnerFront, &<../shield_sts_modular.rules>/Part/Components/OverclockOverloadEffect
			{
				ContinuousEffects [ : &../^/1/ContinuousEffects/0 { Radius = &../../../ArcShield_InnerFront/Radius } ]
			}
			OverclockOverloadEffect_InnerRight :	<../stats.rules>/Stats/OverclockOverloadEffect_InnerRight, OverclockOverloadEffect_InnerFront	{}
			OverclockOverloadEffect_InnerBack :		<../stats.rules>/Stats/OverclockOverloadEffect_InnerBack, OverclockOverloadEffect_InnerFront	{}
			OverclockOverloadEffect_InnerLeft :		<../stats.rules>/Stats/OverclockOverloadEffect_InnerLeft, OverclockOverloadEffect_InnerFront	{}
			
			// Always
			STS_EmitterEffect : &<../shield_sts_modular.rules>/Part/Components/EmitterEffect
			{
				OperationalToggle = IsOperational
				MediaEffects
				[
					: &../^/0/MediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Purple/ShieldMediaEffect_On, ^/0/ArcSprite	{}
					}
					: &../^/0/MediaEffects/1	{}
				]
			}
		}
	}
	
	ToggleComponents_Purple_Off
	{
		Type = ToggledComponents
		Toggle = Toggle_Purple_Off
		IncludeInBlueprints = false
		Components =
		{
			// Inner
			ArcShield_InnerFront :	&../../ToggleComponents_Purple_On/Components/ArcShield_InnerFront
			{
				ShieldMediaEffects
				[
					: &../^/0/ShieldMediaEffects/0
					{
						ArcSprite : &<../../colors.rules>/Color/Purple/ShieldMediaEffect_Off, ^/0/ArcSprite	{}
					}
					: &../^/0/ShieldMediaEffects/1 {}
				]
			}
			ArcShield_InnerRight :	<../stats.rules>/Stats/ArcShield_InnerRight, ArcShield_InnerFront	{}
			ArcShield_InnerBack :	<../stats.rules>/Stats/ArcShield_InnerBack, ArcShield_InnerFront	{}
			ArcShield_InnerLeft :	<../stats.rules>/Stats/ArcShield_InnerLeft, ArcShield_InnerFront	{}
		}
	}
	
